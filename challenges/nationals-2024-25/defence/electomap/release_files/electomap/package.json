		"@tailwindcss/vite": "^4.1.6",
		"axios": "^1.9.0",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.43.1",
		"drizzle-seed": "^0.3.1",
		"jose": "^6.0.11",
		"mqtt": "^5.10.4",
		"pg": "^8.15.6",
		"tailwindcss": "^4.1.6"
	}
